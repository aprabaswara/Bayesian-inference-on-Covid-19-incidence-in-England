model{
  ## specify the distribution for x_1 and x_2 - note using precision
  x[1] ~ dnorm(0,0.01)
  x[2] ~ dnorm(x[1],tau)
  for (i in 3:N){ ## loop over the data
    x[i] ~ dnorm(2*x[i-1]-x[i-2],tau) ## specify the distribution for the rest of x_i - note using precision
  }
  for (i in 1:N){
    n[i] <- exp(x[i])
  }
  m <- B %*% n
  for (i in 1:N){
    y[i] ~ dpois(m[i])
  }
  tau ~ dgamma(4,0.04) ## prior for precision tau
}